@model ExerciseApp.Models.HomeViewModel
@{
    string profile_picture = "https://graph.facebook.com/" + @Model.UserId + "/picture?type=large";
}
<script src="~/Scripts/home.js"></script>
<div style="height: 90vh;" class="">

    <div class="row">
        <div class="col-xs-12 padding-top-bottom home-profile">
            <div class="col-xs-6 infoDesp">
                <h3>Hello @Model.UserFirstName</h3>
                <h1>@Model.currentDay</h1>
                <h3>@Model.currentDate</h3>
            </div>
            <div class="col-xs-6 profilpic"><img src="@profile_picture" /></div>
        </div>

        <div class="col-xs-12 padding-top-bottom">
            <div class="col-xs-12">
                <h4>“If you can dream it, you can do it.” <br /> - Walt Disney</h4>
            </div>
            
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div class="col-xs-12 homeTrophy xx">
                <div class="homeTrophyImg col-xs-3"><img src="/images/trophy.png" /></div>
                <div class="homeTrophyCount col-xs-9"><h1>@Model.unlockedAchievements / @Model.totalAchievements achievements</h1></div>
            </div>
        </div>

        <div class="col-xs-12 padding-top-bottom">
            <div class="col-xs-12 rival xx">
                <div class="col-xs-3"><p class="levelNr">@Model.currentUserLevel</p><hr style="margin-bottom:2px; margin-top:-17px;" /><p class="levelNr2">level</p></div>
                <div class=" col-md-7 XPprogress">
                    <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="" data-currentxp="@Model.totalXpForThisLevelEquals" data-nextlevel="@Model.totalXpForNextLevel">
                        
                    </div>
                    <div id="xpPoint" class="col-md-12">
                        <p>@Model.totalXpForThisLevelEquals xp</p><p style="float:right; margin-top:-28px;">@Model.totalXpForNextLevel xp</p>
                    </div>

                </div>

                <div class="col-xs-3">
                    <p class="levelNr">
                        @Model.nextUserLevel
                    </p><hr style="margin-bottom:2px; margin-top:-17px;" /><p class="levelNr2">level</p>
                </div>
            </div>
            <div class="col-xs-12 daily-challenge">
                <p><b>Daily Challenge</b></p>
                <span>This is the daily challenge!</span>
            </div>
        </div>

        <div class="col-xs-12 padding-top-bottom">
            

            <button class="enterResultButton" type="button">
                <a href="/Manage/Categories"><p>Enter km/kg</p></a>
            </button>
        </div>
    </div>
    


</div>

