@model IEnumerable<ExerciseApp.EX_ExerciseTable>

@{
    ViewBag.Title = "ChallengeCategories";
}

<h2>Pick a category</h2>
<div class="row">
    <div class="col-xs-12 challenge-categories-container">

        @foreach (var item in Model)
        {
            <div class="col-xs-4">
                <div class="categories col-xs-12" data-toggle="modal" data-target="#categoryModal" data-return="@item.ExerciseType" data-value="@item.ExerciseMultiplier" data-id="@item.ExerciseId">
                    <img style="filter: invert(100%); height: 50px; width: 50px;" class="category-images" src="~/images/cat-@(item.ExerciseId).png" />
                    
                </div>
                <span>@Html.DisplayFor(modelItem => item.ExerciseName)</span>
            </div>

        }

        <div id="categoryModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title"></h4>
                    </div>
                    <div class="modal-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/challengecategories.js"></script>