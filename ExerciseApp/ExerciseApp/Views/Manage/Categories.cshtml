@model IEnumerable<ExerciseApp.EX_ExerciseTable>

@{
}
@Styles.Render("~/Content/css")


<h2>Categories</h2>
<div class="row">
    <div class="col-xs-12 category-container">
        
        @foreach (var item in Model)
        {
            <div class="col-xs-4">
                <div class="categories col-xs-12" data-toggle="modal" data-target="#categoryModal" data-return="@item.ExerciseType" data-value="@item.ExerciseMultiplier" data-id="@item.ExerciseId">
                    <img style="filter: invert(100%); height: 50px; width: 50px;" class="category-images" src="~/images/cat-@(item.ExerciseId).png" />
                </div>
                <p>@Html.DisplayFor(modelItem => item.ExerciseName)</p>
            </div>
            
        }

        <div id="categoryModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/categories.js"></script>

