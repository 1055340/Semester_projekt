@model IEnumerable<ExerciseApp.EX_AchievementTable>
@{
    ViewBag.Title = "Achievements";
}
<script src="/Scripts/jquery-3.2.1.js"></script>
<script src="~/Scripts/achievements.js"></script>

<h2>Achievements</h2>

<div class="achievement-container row">
    <div class="achieved-container row">
        <h3>Unlocked Achievements</h3>

    </div>  
    <h3>Locked Achievements</h3>
@foreach(var item in Model)
{
    
    <div class="col-xs-12 not-achieved" data-id="@Html.DisplayFor(modelItem => item.AchievementId)">
        <div class="overlay"></div>
            <p style="font-weight: bold;">@Html.DisplayFor(modelItem => item.AchievementName) </p>
        <div style="display:flex; padding: 10px 0;" class="row">
            <div class="col-xs-6">
                <p style="font-size:.8em;">@Html.DisplayFor(modelItem => item.AchievementDescription)<span style="font-size:.9em; font-weight: bold;"> (@Html.DisplayFor(modelItem => item.AchievementScore) xp)</span></p>

            </div>
            <div style="text-align:center;" class="col-xs-6">
                <img style="filter: invert(100%); height: 75px; width: 75px;" class="category-images" src="~/images/ach-@(item.AchievementId).png" />
            </div>
        </div>
    </div>
    
}
</div>